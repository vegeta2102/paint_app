<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/bg_blue">
<item>
    <selector>
        <item android:state_enabled="true">
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <solid android:color="@color/bg_white" />
                <stroke android:color="@color/bg_light_gray"
                    android:width="1dp"/>
            </shape>
        </item>
        <item android:state_enabled="false">
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <solid android:color="@color/bg_white_disable" />
                <stroke android:color="@color/bg_light_gray"
                    android:width="1dp"/>
            </shape>
        </item>
    </selector>
</item>
</ripple>
